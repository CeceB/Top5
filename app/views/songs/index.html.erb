<p id="notice"><%= notice %></p>

<h1>My Songs</h1>
<p>
<%= link_to new_song_path do %>
  <span class="glyphicon glyphicon-plus"></span> Add Song
  <% end %>
</p>
<div class="row">
    <% @songs.each do |song| %>
      <div class="col-md-6">
        <div class="well">
          <h2><%= link_to song.name[0..15], song %>...</h2>
          by<h3><%= song.artist.name %></h3>
          <p>
          <% song.rating.times do %>
          <span class="glyphicon glyphicon-star"></span>
          <%end%>
        </p>
          <p>
            <%= link_to edit_song_path(song) do %>
            <i class= "fa fa-pencil-square-o"></i> Edit
            <%end%>
            |
          <%= link_to song, method: :delete, data: { confirm: 'Are you sure?' } do %>
          <i class="fa fa-trash-o"></i> Destroy
          <%end%>
          </p>
        </div>
      </div>
    <% end %>
  </div>
  




